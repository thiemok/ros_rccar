<launch>
  <node name="joy_node" pkg="joy" type="joy_node">
  	<param name="autorepeat_rate" value="20"/>
  </node>

  <node name="joystick_control_node" pkg="rc_car" type="joystick_control_node">
    <param name="throttle_axis" value="2"/>
    <param name="brake_axis" value="5" />
    <param name="gear_switch_button" value="0" /> 
    <param name="direction_switch_button" value="1" />   
    <param name="steering_axis" value="0" />
    <param name="HI_gear_mod" value="1.0" />
    <param name="LOW_gear_mod" value="0.3" />
  </node>

  <node name="rc_car_node" pkg="rc_car" type="rc_car_node">
    <param name="engine_id" value="0"/>
    <param name="steering_servo_id" value="1" />
    <param name="steering_servo_right_limit" value="775" />    
    <param name="steering_servo_left_limit" value="475" />
    <param name="reversing_timeout" value="2.0" />
  </node>
</launch>